{
	"resourcePackages": [
		"de.hpi.bpt.chimera"
	],
	"prettyPrint": true,
	"cacheTTL": 0,
	"openAPI": {
		"servers": [{
				"description": "The master branch of Chimera",
				"url": "https://bpt-lab.org/chimera/api"
			}, {
				"description": "The development branch of Chimera",
				"url": "https://bpt-lab.org/chimera-dev/api"
			}, {
				"description": "For local development",
				"url": "http://localhost:{port}/{chimeraBasePath}/api",
				"variables": {
					"port": {
						"default": "8080"
					},
					"chimeraBasePath": {
						"default": "Chimera"
					}
				}
			},
			{
				"description": "Fully costumizable path",
				"url": "{path}/api",
				"variables": {
					"path": {
						"default": "https://bpt-lab.org/chimera-dev"
					}
				}
			}
		]
	}
}